var that = this,
 currentCategory = "";
jQuery.each(items, function (index, item) {
if (item._type != currentCategory) {
 ul.append("<h3 class='ui-autocomplete-category search_title'>" + (item._type == "serie" ? 'Series TV' : '') + (item._type == "movies" ? 'Peliculas' : '') + (item._type == "kids" ? 'Ni침os' : '') + "</h3>");
 currentCategory = item._type;
}
that._renderItemData(ul, item);
});
 }
});
jQuery(function () {
jQuery("[name=s]").autocomplete({
appendTo: ".search",
delay: 0,
source: function (request, response) {
jQuery(".ui-autocomplete").addClass("searchLoading");
jQuery(".ui-autocomplete").empty();
jQuery(".ui-autocomplete").show();
jQuery.ajax({
 type: "get",
 dataType: "json",
 data: {"q": request.term},
 success: function (data) {
//console.log(data);
